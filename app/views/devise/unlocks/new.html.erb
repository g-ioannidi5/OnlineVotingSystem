
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, :id => "signup" }) do |f| %>
<h1>Resend unlock instructions</h1>
  <%= devise_error_messages! %>
  <div>
  	<%= f.label :email %><br />
  	<%= f.email_field :email, autofocus: true %>
  </div>
  <div>
  	<%= f.submit "Resend unlock instructions", {class: 'btn btn-large btn-primary'} %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
