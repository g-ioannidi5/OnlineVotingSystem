<% if student_signed_in? %>
<div id = "center">
  <p> Please sign out from Student to sign in as a Lecturer </p> <button>  <%= link_to('Sign out', destroy_student_session_path, :method => :delete) %> </button>
</div>
<% elsif lecturer_signed_in? %>
<div id = "center">
  <p> Please sign out from Lecturer to sign in as a Student </p> <button>  <%= link_to('Sign out', destroy_student_session_path, :method => :delete) %> </button>
</div>
<% else %>
<p id="notice"><%= notice %></p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "signup"}) do |f| %>
<h1>Log in</h1>
  <div>
  	<%= f.label :email %>
  	<br />
  	<%= f.email_field :email, autofocus: true %>
  </div>
  <div>
  	<%= f.label :password %>
  	<br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div>
    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
   	</div>
  <% end -%>
  <div>
  	<%= f.submit "Sign in", {class: 'btn btn-large btn-primary'} %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<% end %>