
<% if flash[:alert] %>
    <p class="alert alert-danger"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="alert alert-success"><%= flash[:notice] %></p>
  <% end %>
  <h1>Listing Access Codes</h1>
<div class="table-responsive">
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Valid until</th>
        <th>Lecturer</th>
        <th>Subject</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @access_codes.each do |access_code| %>
        <tr>
          <td><%= access_code.code %></td>
          <td><%= access_code.valid_until %></td>
          <td><%= access_code.lecturer.email %></td>
          <td><%= access_code.subject.title %></td>
          <td><%= link_to 'Show', access_code %></td>
          <td><%= link_to 'Edit', edit_access_code_path(access_code) %></td>
          <td><%= link_to 'Destroy', access_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <br>
  <%= link_to 'New Access code', new_access_code_path %>
