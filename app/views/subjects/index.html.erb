  <% if flash[:alert] %>
    <p class="alert alert-danger"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="alert alert-success"><%= flash[:notice] %></p>
  <% end %>
<% if lecturer_signed_in? %>

  <h1>Listing Subjects</h1>
<div class="table-responsive">
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Title</th>
        <th>Lecturer</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.code %></td>
          <td><%= subject.title %></td>
          <td><%= subject.lecturer.email %></td>
          <td><%= link_to 'Show', subject %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Subject', new_subject_path %>
<% else %>
  <p>Sign in or sign up to Book a lawn</p>
  <button>  <%= link_to('Sign in', new_lecturer_session_path)  %> </button>
  <button> <%= link_to('Sign up', new_lecturer_registration_path)  %> </button>
<% end %>
</div>